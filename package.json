{
  "name": "silentwalker_gallery",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",

    "sync": "rclone sync -v \"drive_gallery:SiLeNtWaLkEr Destiny Emblem Wallpapers\" wallpapers && node createThumbs.js && npm run sync-git",
    "sync-git": "git add public/images/thumbs/** && git add wallpapers/** && (git diff --quiet && git diff --staged --quiet || git commit -am 'Update images') && git push",
    
    "export": "next build && next export",
    "deploy": "touch ./out/.nojekyll && node publish.js",
    "update": "git pull && npm run sync && npm run export && npm run deploy"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "checksum": "^1.0.0",
    "classnames": "^2.3.1",
    "cookie-cutter": "^0.2.0",
    "fs-extra": "^10.0.0",
    "gh-pages": "^4.0.0",
    "glob": "^7.2.0",
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.49.7",
    "sharp": "^0.30.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/eslint-parser": "^7.17.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0"
  }
}
